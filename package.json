{
  "name": "phm",
  "version": "1.0.0",
  "private": true,
  "description": "Project Hail Mary - Heating Industry CRM and Surveying Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @phm/api\" \"npm run dev -w @phm/web\"",
    "build": "npm run build -w @phm/shared && npm run build -w @phm/api && npm run build -w @phm/web",
    "db:generate": "npm run db:generate -w @phm/api",
    "db:migrate": "npm run db:migrate -w @phm/api",
    "db:studio": "npm run db:studio -w @phm/api",
    "type-check": "npm run type-check --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
